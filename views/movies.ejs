<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="stylesheet" href="/css/style.css" />
        <title>Movies</title>
    </head>
    <body>
        <h1>Movies</h1>
        <div class="container">
            <% if(movies){ %> <% movies.forEach((movie) => {%>
            <div class="movie-container">
                <img src="<%= movie.src %>" alt="<%= movie.name %>" />
                <h1><%= movie.name %></h1>
            </div>
            <% })%> <% } %>
        </div>
    </body>
</html>
